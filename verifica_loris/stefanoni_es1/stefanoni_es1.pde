// imposto la dimensione della finestra a 600x400
size(600,400);
// imposto il background della finestra a verde
background(0,255,0);

// imposto il colore dei bordi a blu
stroke(0,0,255);
// imposto lo spessore del tratto a 10px
strokeWeight(10);

// imposto il colore di riempimento a rosso
fill(255,0,0);
// disegno il rettangolo in centro alla finestra
rect(100,50, 400, 300);

// imposto il colore di riempimento a giallo
fill(255, 255,0);
// disegno un'ellisse in centro alla finestra
ellipse(300,200,200,150);
